pipeline {
    agent any
    stages {
        stage('Build') {
            steps {
                sh 'npm install'
                sh 'npm run build'
                sh 'ls'
                sh 'cd build'
                sh 'ls'
            }
        }
        stage('S3 Upload') {
            steps {
                withAWS(region: 'us-east-1', credentials: '9ea669a3-0548-4743-9b53-8655f15a43e0') {
                    sh 'ls -la build'
                    sh 'aws s3 cp dist s3://rbs-frontend-dev/ --recursive'
                }
            }
        }
    }
}